<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoPageActivity"
    android:orientation="vertical"
    android:id="@+id/photo_pager_constraint_layout">

    <ProgressBar
        android:id="@+id/fragment_photo_page_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_photo_page_web_view"
        android:layout_marginBottom="0dp"
        android:visibility="gone"
        tools:visibility="visible"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="?attr/colorPrimary"/>

    <WebView
        android:id="@+id/fragment_photo_page_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_photo_page_progress_bar"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"/>
</android.support.constraint.ConstraintLayout>